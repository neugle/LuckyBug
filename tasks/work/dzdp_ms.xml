    </bean>
    <bean id="console" class="com.rain6.luckybug.pipeline.ConsolePipeline"/>
    <bean id="mysql" class="com.rain6.luckybug.pipeline.RdbmsPipeline">
        <property name="tableName" value="dzdp_ms"></property>
    </bean>
</beans>